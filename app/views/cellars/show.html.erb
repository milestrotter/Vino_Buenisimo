<div class='container'>
	<div class='row wine-cellar'>
		<div class='col-sm-12 wine-cellar'>
			<h1><%= @cellar.name %> (<%= @cellar.classification %>)</h1> 
			<a href="/cellars/<%= @user.id %>/edit">
				<div class='col-sm-8 wine-list home-group'>
					<h2>Your Wines</h2>
					<p><%= link_to('Edit Cellar', edit_cellar_path, :class => "btn btn-warning") %></p>
					<table class='table table-condensed table-striped'>
						<thead>
							<th>Category</th>
							<th>Winery</th>
							<th>Type</th>
							<th>Year</th>
							<th>Price</th>
							<th>Action</th>
						</thead>
						<tbody>
						<% @wines.each do |wine| %>
							<tr>
								<td><%= wine.wine_category.name %></td>
								<td><%= wine.winery %></td>
								<td><%= wine.wine_type.name %></td>
								<td><%= wine.year %></td>
								<td>$<%= wine.price %></td>
								<td><%= link_to('Remove', destroy_wines_path(cellar_id: @cellar.id, id: wine.id), :method => "delete", :class => "btn btn-default") %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
				</div>
			</a>
		</div>
		<a href="/cellars/<%= @cellar.id %>/wines" class='btn btn-primary create-add'>Add Wine</a>
	</div>
</div>