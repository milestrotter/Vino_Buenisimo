<div class='container'>
	<div class='row'>
		<div class='col-sm-12'>
			<h1>Message <%= @conversation.id %></h1>
			<div class='col-sm-12 home-group'>
				<%= simple_form_for @message do |f| %>
					<%= f.input :subject %>
					<%= f.input :content %>
					<%= f.input :user_id, :as => :hidden, :input_html => { :value => @user.id } %>
